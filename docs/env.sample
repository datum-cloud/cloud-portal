# ==========================================
# Environment Configuration
# ==========================================

# Node.js Environment
NODE_ENV=development

# Session Configuration
SESSION_SECRET=${openssl rand -base64 32}

# Application URLs
APP_URL=http://localhost:3000
API_URL=https://api.staging.env.datum.net

# Version Information
VERSION=dev

# ==========================================
# Authentication Configuration
# ==========================================

# OIDC Authentication (Zitadel)
AUTH_OIDC_ISSUER=https://auth.staging.env.datum.net
AUTH_OIDC_CLIENT_ID=your-client-id

# OAuth2 Providers (Legacy - if still used)
AUTH_GOOGLE_ID=fakeid
AUTH_GOOGLE_SECRET=fakesecret
AUTH_GITHUB_ID=fakeid
AUTH_GITHUB_SECRET=fakesecret

# ==========================================
# Cloud Valid Integration
# ==========================================

CLOUDVALID_API_URL=https://api.cloudvalid.com
CLOUDVALID_API_KEY=your-cloudvalid-api-key
CLOUDVALID_TEMPLATE_ID=your-template-id

# ==========================================
# Observability & Monitoring
# ==========================================

# Telemetry & Logging
TELEMETRY_URL=https://dummy-telemetry-url.local
PROMETHEUS_URL=https://dummy-prometheus-url.local

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENV=development
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Analytics
FATHOM_ID=your-fathom-id

# ==========================================
# Development & Debug
# ==========================================

# Debug Mode
DEBUG=false

# Cypress Testing
CYPRESS=false

# ==========================================
# OpenTelemetry Configuration
# ==========================================

OTEL_LOG_LEVEL=info
OTEL_ENABLED=true

# ==========================================
# Server Configuration
# ==========================================

# Port (default: 3000)
PORT=3000
